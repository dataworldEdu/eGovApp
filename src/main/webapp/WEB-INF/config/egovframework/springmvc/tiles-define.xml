<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name=".root" template="/WEB-INF/jsp/tiles/tiles-layout.jsp">
        <put-attribute name="title" value=""/>
        <put-attribute name="header" value="/WEB-INF/jsp/tiles/header.jsp" />
    </definition>

    <definition name="/login/*" extends=".root">
        <put-attribute name="main" value="/WEB-INF/jsp/login/{1}.jsp" />
    </definition>
    <definition name="/*/*" extends=".root">
        <put-attribute name="main" value="/WEB-INF/jsp/{1}/{2}.jsp" />
    </definition>

</tiles-definitions>